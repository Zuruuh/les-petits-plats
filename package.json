    "@typescript-eslint/parser": "^5.30.6",
    "autoprefixer": "^10.4.7",
    "eslint": ">=5.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fast-glob": "^3.2.11",
    "normalize-css": "^2.3.1",
    "playwright": "^1.27.1",
    "postcss": "^8.4.14",
    "postcss-load-config": "^4.0.1",
    "postcss-scss": "^4.0.4",
